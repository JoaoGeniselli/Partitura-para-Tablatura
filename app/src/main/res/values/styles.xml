<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Tablature" />

    <style name="TabNote">
        <item name="android:background">@drawable/shape_black_rectangle</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:minWidth">32dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TabChordIndicator">
        <item name="android:minWidth">32dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="Text" />

    <style name="Text.Title">
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>

</resources>
