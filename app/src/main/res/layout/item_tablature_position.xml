<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/score_line_button_height"
    android:clipChildren="false"
    android:clipToPadding="false">

    <TextView
        android:id="@+id/text_chord"
        android:layout_width="16dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="G" />

    <View
        android:id="@+id/view_line"
        android:layout_width="0dp"
        android:layout_height="@dimen/score_line_height"
        android:background="@color/sheet_main_line_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/text_chord"
        app:layout_constraintVertical_bias="0.533"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/text_fret"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@color/white"
        android:paddingStart="3dp"
        android:paddingEnd="3dp"
        android:src="@drawable/ic_note"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="10"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>